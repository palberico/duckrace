rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Ducks collection: read/write access for all
    match /ducks/{duckId} {
      allow read, write: if true;
    }

    // Locations collection: read/write access for all
    match /locations/{locationId} {
      allow read, write: if true;
    }

    // Comments collection: read/write access for all
    match /comments/{commentId} {
      allow read, write: if true;
    }

    // Photos collection: read/write access for all
    match /photos/{photoId} {
      allow read, write: if true;
    }

    // Restrict access to other collections to only authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
